@page "/Index"

@inject NavigationManager navigationManager
@rendermode InteractiveServer


<PageTitle>Registro Con Detalle</PageTitle>
<div class="container">
    <div class="card shadow">
        <div class="card-header text-black">
            <div class="justify-content-between align-items-center"
                <h3>Registro con detalles</h3>
            </div>
        </div>

        @*Body*@
        <div class="card-body"
            <div class="row mt-2"
                <div class="col-2">
                    <label class="col-form-label"><strong>Desde</strong></label>
                </div>   
                <div class="col-2">
                    <label class="col-form-label"><strong>Hasta</strong></label>
                </div>
                <div class="col-3">
                    <label class="col-form-label"><strong>Filtrar por</strong></label>
                </div>
                <div class="col-4">
                    <label class="col-form-label"><strong>Búsqueda</strong></label>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-2">
                    <InputDate class="form-control" @bind-Value="FechaInicial"></InputDate>
                </div>
                <div class="col-2">
                    <InputDate class="form-control" @bind-Value="FechaFinal"></InputDate>
                </div>
                <div class="col-3">
                    <InputSelect class="form-control" @bind-Value="Filtrar">
                        <option value="Id">Id</option>
                    </InputSelect>
                </div>
                <div class="col-4">
                    <InputText class="form-control" @bind-Value="ValorFiltro"></InputText>
                </div>
            </div>
           </div>
        </div>
    </div>

@code {
    public string Filtrar { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;
    public DateTime FechaInicial { get; set; } = DateTime.UtcNow;
    public DateTime FechaFinal { get; set; } = DateTime.UtcNow;

    protected override async Task OnInitializedAsync()
    {
        
    }
}
